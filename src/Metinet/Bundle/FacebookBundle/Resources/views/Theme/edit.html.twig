{% extends "MetinetFacebookBundle::base.html.twig" %}
{% block title %}Edition Theme{% endblock %}
{% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('/bundles/metinetfacebook/css/admin.css') }}" type="text/css" />
{% endblock %}
{% block body %}
<div id='header'>
    <a href="{{ path('admin_index') }}"><h1 id="logo">YouQuizz-administration</h1></a>
</div>
<div id="page">
    <div id="contenu"> 
       
        <h1>Edition Theme</h1>

        <form action="{{ path('theme_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            {{ form_widget(edit_form) }}
            <img id="formimage" src="{{ image(entity.getAbsolutePath()).resize(100,100) }}" alt="{{ entity.picture }}"/>    
             <ul class="record_actions">
                <li>
                    <button class="deleteBouton" type="submit">Enregistrer</button>
                </li>
                <li>
                    <a  class="lienBouton" href="{{ path('theme') }}">
                        Retour Ã  la liste
                    </a>
                </li>
                <li>
                    <form action="{{ path('theme_delete', { 'id': entity.id }) }}" method="post">
                        {{ form_widget(delete_form) }}
                        <button  class="deleteBouton" type="submit">Supprimer</button>
                    </form>
                </li>
            </ul>

        </form>

    </div>
</div>
{% endblock %}

