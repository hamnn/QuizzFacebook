{% extends "MetinetFacebookBundle::base.html.twig" %}
{% block title %}Quizz list{% endblock %}
{% block container %}
<h1>Quizz list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Theme</th>
            <th>Titre</th>
            <th>Image</th>
            <th>Short description</th>
            <th>Long description</th>
            <th>Points</th>
            <th>Temps</th>
            <th>< 25%</th>
            <th>25% à 50%</th>
            <th>50% à 75%</th>
            <th>75% à 100%</th>
            <th>Titre FB</th>
            <th>Description FB</th>
            <th>Is promoted</th>
            <th>Date création</th>
            <th>Etat</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('quizz_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.theme }}</td>
            <td>{{ entity.title }}</td>
            <td><img src="{{ entity.getWebPath() | imagine_filter('my_thumb') }}" alt="{{ entity.title }}"/></td>
            <td>{{ entity.shortDesc }}</td>
            <td>{{ entity.longDesc }}</td>
            <td>{{ entity.winPoints }}</td>
            <td>{{ entity.averageTime }}</td>
            <td>{{ entity.txtWin1 }}</td>
            <td>{{ entity.txtWin2 }}</td>
            <td>{{ entity.txtWin3 }}</td>
            <td>{{ entity.txtWin4 }}</td>
            <td>{{ entity.shareWallTitle }}</td>
            <td>{{ entity.shareWallDesc }}</td>
            <td>{{ entity.isPromoted }}</td>
            <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.state }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('quizz_show', { 'id': entity.id }) }}">Voir</a>
                    </li>
                    <li>
                        <a href="{{ path('quizz_edit', { 'id': entity.id }) }}">Modifier</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('quizz_new') }}">
            Créer un nouveau quizz
        </a>
    </li>
</ul>
{% endblock %}