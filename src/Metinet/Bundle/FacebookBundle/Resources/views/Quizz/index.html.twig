{% extends "MetinetFacebookBundle::base.html.twig" %}
{% block title %}Quizz list{% endblock %}
{% block stylesheets %}
    <link type="text/css" rel="stylesheet" href="{{asset('/bundles/metinetfacebook/css/admin.css')}}" />
{% endblock %}
{% block container %}
<h1>Quizz list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Theme</th>
            <th>Titre</th>
            <th>Image</th>
            <th>Réussite %</th>
            <th>Participations</th>
            <th>Etat</th>
            <th>Voir</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('quizz_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.theme.title }}</td>
            <td>{{ entity.title }}</td>
            <td><img src="{{ image(entity.getAbsolutePath()).resize(100,100) }}" alt="{{ entity.picture }}"/></td>
            <td>{% if entity.state == 1 %}<a class="state" href="{{ path('quizz_state', { 'id': entity.id }) }}" id="actif">Activé</a>{% else %}<a class="state" href="{{ path('quizz_state', { 'id': entity.id }) }}" id="actif">Desactivé</a>{% endif %}</td>
            <td><a class="see" href="{{ path('quizz_show', { 'id': entity.id }) }}">Voir</a<</td>
            <td><a class="edit" href="{{ path('quizz_edit', { 'id': entity.id }) }}">Modifier</a></td>
            <td>
                <form action="{{ path('quizz_delete', { 'id': entity.id }) }}" method="post">
                    <button class="delete" type="submit">Supprimer</button>
                </form>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('quizz_new') }}">
            Créer un nouveau quizz
        </a>
    </li>
    <li>
        <a href="{{ path('admin_index') }}">
            Retour administration
        </a>
    </li>
</ul>
{% endblock %}